<!DOCTYPE html>
<html>
  <head>
    <title>Book Collection: Results</title>
    <%- include('../components/head') %>
  </head>
  <body>
    <main>
      <h4>Search Results</h4>
      <%- include('../components/nav') %>
      <ul>
        <% searchesResults.forEach(book => { %>
        <li> 
          <div class='result'>
            <img src= <%= book.image %>>
              <h5><%= book.title %></h5>
              <p class='author'>Written By: <%= book.author %></p>
              <p class='description'><%= book.description %></p>
              <form action="/add" method="post">
                <fieldset>
                  <!-- <legend>Add this Book?</legend> -->
                  <label>Title:</label>
                  <input type="text" name="title" value="<%= book.title %>"</br>
                  <label>Author:</label>
                  <input type="text" name="author" value="<%= book.author %>"></br>
                  <input type="hidden" name="image_url" value="<%= book.image %>">
                  <label>Description:</label>
                  <textarea name="description" cols="30" rows="10"><%= book.description %></textarea></br>
                  <label>ISBN #:</label>
                  <input type="text" name="isbn" value="<%= book.isbn %>"></br>
                  <label>Custom Bookshelf Name:</label>
                  <input type="text" name="bookshelf" value="Default" ></br>
                  <button type="submit">Add Book</button>
                </fieldset>
              </form>
          </div>
        </li>
        <% }) %>
      </ul>
    </main>
  </body>
</html>